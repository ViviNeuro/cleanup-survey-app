{
  "expo": {
    "name": "Sampah Track",
    "slug": "sampah-track",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon3.png",
    "scheme": "sampahtrack",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.sampahtrack.app",
      "buildNumber": "2",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera access is used only if future features require photo uploads.",
        "NSPhotoLibraryUsageDescription": "Photo access is used only if future features require uploads.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "org.sampahtrack.app",
      "versionCode": 2,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "plugins": [
      "expo-router",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ba10f834-d810-4e12-8b1b-05425c7b5c8c"
      }
    }
  }
}
